<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.cookmania.controllers.fragments.HomeFragment"
    android:id="@+id/home_refresh_layout">

    <!-- TODO: Update blank fragment layout -->
    <com.esprit.cookmania.views.CustomScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_scroll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_suggested_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_toprated_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_healthy_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_cheap_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_feed_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>
    </com.esprit.cookmania.views.CustomScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
