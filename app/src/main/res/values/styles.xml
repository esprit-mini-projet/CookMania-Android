<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorFaded</item> <!-- color for bottom border of textinputedittext -->
        <item name="multiSliderStyle">@style/Widget.MultiSlider</item>
    </style>

    <style name="MainScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorFaded</item> <!-- color for bottom border of textinputedittext -->
    </style>

    <style name="RatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressBackgroundTint">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:indeterminateTint">@android:color/white</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="PixAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="Widget.MultiSlider" parent="android:Widget">
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- CoachMark animation -->
    <style name="CoachMarkAnimation">
        <item name="android:windowEnterAnimation">@anim/coach_mark_show</item>
        <item name="android:windowExitAnimation">@anim/coach_mark_hide</item>
    </style>

</resources>
